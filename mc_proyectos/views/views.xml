<odoo>
  <data>
    <record id="view_order_form_inherit_mc_proyectos" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.mc_proyectos</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
              <button name="action_generate_albaran" type="object" string="Generar albarÃ¡n" class="oe_highlight"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page name="mc_proyectos_tab" string="Insumos">
                    <field name="bom_ids">
                        <tree editable="bottom">
                          <field name="is_selected" widget="boolean_toggle"/>
                          <field name="product_tmpl_id"/>
                          <field name="code"/>
                          <field name="type"/>
                          <field name="company_id"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
  </data>
</odoo>